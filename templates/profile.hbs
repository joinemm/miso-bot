<html>
  <head>
    <meta charset='utf-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css'
    />
    <link rel='stylesheet' href='{{BASE_URL}}/static/css/profile.css' />
  </head>
  <body class='{{THEME}}'>
    <div class='layout' id='boundingBox'>
      <div class='border {{BORDER_CLASS}}'>
        <div class='card'>
          <div class='{{BACKGROUND_CLASS}}' style='{{BACKGROUND_STYLE}}'></div>
          <div class='profile'>
            <div class='avatar'>
              <img src='{{AVATAR_URL}}' />
            </div>
            <div class='header'>
              <div class='account'>
                <h3 class='username'>
                  {{USERNAME}}
                  <span class='discriminator'>
                    #{{DISCRIMINATOR}}
                  </span>
                </h3>
              </div>
              <div class='badges'>
                {{#each BADGES}}
                  <div class='icon {{this.classes}}' style='color: {{this.color}}'>

                    <i class='{{this.icon}}'></i>

                  </div>
                {{/each}}
              </div>
            </div>
            <h5 class='bio'>
              {{BIO}}
            </h5>
            <div class='info'>
              <div class='stats-container'>
                <div class='stat'>
                  <div class='icon pink'>
                    <i class='fas fa-user'></i>
                  </div>
                  <div class='stat-value'>
                    #{{MEMBER_NUMBER}}
                    <div class='stat-key'>
                      Member
                    </div>
                  </div>
                </div>
                <div class='stat'>
                  <div class='icon yellow'>
                    <i class='fas fa-signal'></i>
                  </div>
                  <div class='stat-value'>
                    {{COMMAND_COUNT}}
                    <div class='stat-key'>
                      Commands
                    </div>
                  </div>
                </div>
                <div class='stat'>
                  <div class='icon blue'>
                    <i class='fas fa-fish-fins'></i>
                  </div>
                  <div class='stat-value'>
                    {{FISHY_AMOUNT}}
                    <div class='stat-key'>
                      Fishy
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>